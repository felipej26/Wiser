<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:elevation="2dp"
        android:background="@drawable/containershape" />

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bemvindo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imgWiser"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ImageView
        android:id="@+id/imgWiser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/lblWelcomeMessage"
        app:layout_constraintTop_toBottomOf="@+id/lblWelcome"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:srcCompat="@mipmap/logo_wiser_2" />

    <TextView
        android:id="@+id/lblWelcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/apresentacao_app"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/imgWiser" />

</android.support.constraint.ConstraintLayout>