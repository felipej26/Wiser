<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background_menu_item"
    android:clickable="true" >

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/black" />

    <include
        layout="@layout/frame_user_picture_circular"
        android:id="@+id/frmImgPerfil"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/viewSeparator"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:id="@+id/lblIDResposta"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/viewSeparator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:id="@+id/lblAutor"
        android:layout_toEndOf="@id/frmImgPerfil"
        android:layout_below="@id/viewSeparator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2016 - 00:00:00"
        android:id="@+id/lblDataHora"
        android:layout_toEndOf="@id/frmImgPerfil"
        android:layout_below="@id/lblAutor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resposta"
        android:id="@+id/lblResposta"
        android:layout_below="@id/frmImgPerfil" />

</RelativeLayout>