<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SugestÃ£o de Assunto"
        android:id="@+id/lblSugestao"
        android:textColor="@color/colorPrimaryInverseText"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResposta"
        android:layout_below="@id/lblSugestao"
        android:layout_marginLeft="16dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnEnviarResposta"
        android:textSize="15sp"
        android:maxLength="250"
        android:maxLines="5"
        android:hint="@string/digite_mensagem"
        android:textColor="#414040"
        android:inputType="textCapSentences|textAutoCorrect|textAutoComplete" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviarResposta"
        android:layout_marginRight="16dp"
        android:background="@mipmap/ic_enviar"
        android:layout_below="@+id/lblSugestao"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 250"
        android:id="@+id/lblContResposta"
        android:textSize="10dp"
        android:layout_toStartOf="@+id/btnEnviarResposta"
        android:layout_below="@id/txtResposta" />

</RelativeLayout>